generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

// Modelo de Usuário
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  questions Question[]
  answers   Answer[]
}

// Modelo de Pergunta
model Question {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamento com Usuário
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  // Relacionamento com Respostas
  answers   Answer[]
}

// Modelo de Resposta
model Answer {
  id         Int      @id @default(autoincrement())
  body       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relacionamento com Usuário
  userId     Int
  user       User     @relation(fields: [userId], references: [id])

  // Relacionamento com a Pergunta
  questionId Int
  question   Question @relation(fields: [questionId], references: [id])
}